# Application Settings
NODE_ENV=development
LOG_LEVEL=info
APP_PORT=4000
APP_HOST=localhost
APP_URL=http://localhost:4000

# OpenAI Configuration (Required for language model)
OPENAI_API_KEY=sk_your_openai_api_key
OPENAI_ORGANIZATION=your-org-id

# Social Media API Keys
TWITTER_APP_KEY=your_twitter_app_key
TWITTER_APP_SECRET=your_twitter_app_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=your_telegram_channel_id

DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_discord_channel_id

# Search and Web APIs
GOOGLE_SEARCH_API_KEY=your_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# Solana Token API Configuration
COVE_API_ENDPOINT=https://api.example.com/solana/v1
COVE_API_KEY=your_cove_api_key

# Database Configuration (Optional)
DATABASE_URL=postgresql://username:password@localhost:5432/cryptobot

# Memory and Caching
REDIS_URL=redis://localhost:6379
MEMORY_STORE=redis  # Options: redis, postgres, memory

# Security Settings
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT_MS=5000
MAX_CONCURRENT_TASKS=10

# Feature Flags
ENABLE_MARKET_ANALYSIS=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_SOCIAL_POSTING=true
ENABLE_HOLDER_TRACKING=true

# Analysis Configuration
MIN_MARKET_CAP_FILTER=1000000  # $1M minimum market cap
MIN_DAILY_VOLUME=100000        # $100K minimum daily volume
PRICE_CHANGE_THRESHOLD=5       # 5% price change threshold
EMERGENCY_ALERT_THRESHOLD=20   # 20% price change for emergency alerts

# Social Media Post Settings
MAX_POSTS_PER_HOUR=4
POST_COOLDOWN_MINUTES=15
EMERGENCY_ALERT_THRESHOLD=20   # % price change for emergency alerts

# Webhook Settings
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_PORT=3001

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_EMAIL=alerts@example.com

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=true
TEST_MODE=false